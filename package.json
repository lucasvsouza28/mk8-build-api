{
  "name": "mk8-build-api",
  "version": "1.0.0",
  "description": "Mario Kart build API",
  "main": "./src/index.ts",
  "repository": "https://www.github.com/lucasvsouza28/mk8-build",
  "author": "Lucas Souza & Matheus Andrade",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/index.ts --respawn",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- -- watch",
    "build": "yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "tsc",
    "test": "jest --coverage",
    "heroku-postbuild": "npm install --no-shrinkwrap && npm run build:js",
    "start": "nodemon"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "mongoose": "^5.12.5",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tsyringe": "^4.5.0",
    "typescript": "^4.2.4",
    "tsconfig-paths": "^3.9.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.6"
  },
  "devDependencies": {
  }
}
